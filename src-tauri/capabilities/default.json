{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPLOCALDATA" },
        { "path": "$APPLOCALDATA/*" },
        { "path": "$APPLOCALDATA/**/*" }

      ]
    }
  ]
}