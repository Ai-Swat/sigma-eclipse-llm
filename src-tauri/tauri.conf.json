{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sigma Eclipse LLM",
  "version": "0.1.1",
  "identifier": "com.sigma-eclipse.llm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sigma Eclipse LLM",
        "width": 550,
        "height": 600,
        "minWidth": 450,
        "minHeight": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "",
    "category": "public.app-category.utilities",
    "shortDescription": "",
    "longDescription": "",
    "externalBin": [
      "binaries/sigma-eclipse-host"
    ],
    "resources": [
      "icons/icon_transparent.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.14",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
